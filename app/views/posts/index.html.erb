<h1>This is an index of posts</h1>

<% @posts.each do |post| %>
	<div class="post-preview">
		<h2 class="post-title"> <%= link_to post.title, post %> </h2>
		<p class="post-meta"><%= truncate(post.body) %></p>
		<p><%=link_to "Edit", edit_post_path(post) %></p>
		<p><%=link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you sure?'} %>
	</div>
	<hr>
<% end %>